<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="flex">
      <a href="/" class="dis left"> Users </a>
      <a href="/users/new" class="dis right">Add new User</a>
    </div>
    <h1>User List</h1>
    <section>
      <% users.forEach(user => { %>
      <div>
        <a href="/users/<%= user.id %>">
          <h2><%= user.name %></h2>
        </a>
      </div>
      <% }) %>
    </section>
  </body>
</html>